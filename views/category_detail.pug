extends layout

block content
  h1 #{category.name} 
  h6 #{category.description}
  ul
  each val in category_items
    li
      a(href=val.url) #{val.name}

  else
    li There are no items in this category.
  <br>
  a(href=category.url+'/delete') Delete this category
  <br>
  a(href=category.url+'/update') Update this category
  <br>
  a(href='/categories') Back to all categories