extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Item name:
      input#name.form-control(type='text', placeholder='Your new item name..' name='name' value=(undefined===item ? '' : item.name))
    div.form-group  
      label(for='description') Item description:
      input#description.form-control(type='text', placeholder='Description of the item.' name='description' value=(undefined===item ? '' : item.description))
    div.form-group  
      label(for='category') Item Category:
       select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if item
            option(value=category._id selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group  
      label(for='price') Item Price:
      input#price.form-control(type='number', placeholder='Item Price.' name='price' value=(undefined===item ? '' : item.price))
    div.form-group 
      label(for='stock') Item stock:
      input#stock.form-control(type='number', placeholder='Item Stock.' name='stock' value=(undefined===item ? '' : item.stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
  <br>   
  a(href='/') Back to home     