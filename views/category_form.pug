extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category name:
      input#name.form-control(type='text', placeholder='Boots, Helms, Gloves etc.' name='name' value=(undefined===category ? '' : category.name))
      label(for='description') Category description:
      input#description.form-control(type='text', placeholder='Description about the category.' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
  <br>   
  a(href='/') Back to home    